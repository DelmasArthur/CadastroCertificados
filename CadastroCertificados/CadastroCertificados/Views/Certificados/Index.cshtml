@model IEnumerable<CadastroCertificados.Models.Certificado>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeCertificado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aluno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoCertificado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TempoCertificado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LinkCertificado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatusCertificado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeCertificado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Aluno.NomeAluno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoCertificado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TempoCertificado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LinkCertificado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusCertificado)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
