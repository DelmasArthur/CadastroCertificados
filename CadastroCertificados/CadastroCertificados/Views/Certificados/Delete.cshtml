@model CadastroCertificados.Models.Certificado

@{
    ViewData["Title"] = "Apagar Certificado";
}

<h1>Apagar</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NomeCertificado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeCertificado)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Aluno)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Aluno.NomeAluno)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TipoCertificado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoCertificado)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TempoCertificado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TempoCertificado)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LinkCertificado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LinkCertificado)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StatusCertificado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StatusCertificado)
        </dd>
    </dl>
    <h4>Você realmente deseja apagar este certificado?</h4>
    <form asp-action="Sim">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
    <div>
        <a asp-action="Index">Voltar para Lista de Certificados</a>
    </div>
</div>
