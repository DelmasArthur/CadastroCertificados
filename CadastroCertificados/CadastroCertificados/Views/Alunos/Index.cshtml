@model IEnumerable<CadastroCertificados.Models.Aluno>

@{
    ViewData["Title"] = "Alunos";
}

<h1>Alunos</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeAluno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Curso)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td width="400px">
                    @Html.DisplayFor(modelItem => item.NomeAluno)
                </td>
                <td width="400px">
                    @Html.DisplayFor(modelItem => item.Curso)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id"><button type="button" class="btn btn-outline-dark btn-sm">Ver Aluno</button></a>
                    <a asp-action="Edit" asp-route-id="@item.Id"><button type="button" class="btn btn-outline-warning btn-sm">Editar Aluno</button></a>
                    <a asp-action="Delete" asp-route-id="@item.Id"><button type="button" class="btn btn-outline-danger btn-sm">Apagar</button></a>
                </td>
            </tr>
        }
        
    </tbody>
</table>
<p>
    <a asp-action="Create"><button type="button" class="btn btn-sm btn-primary">Adicionar Novo Aluno</button></a>
</p>
